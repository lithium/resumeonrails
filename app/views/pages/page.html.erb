


<%=raw markdown(@current_page.header) %>


<% if @current_page.skills.count > 0 %>
<section class="tab-pane active" id="skillset">
  <h2>Skillset</h2>

  <div class="row-fluid">
    <div class="span4">
      <ul class="nav nav-pills nav-stacked sidebar-nav skills">
        <% @current_page.skills.each_with_index do |skill, i| %>
        <li class="<%= i == 0 ? 'active' : '' %>"><a href="#<%= skill.name %>"><%= skill.name %></a></li>
        <% end %>
      </ul>
    </div>
    <div class="span8">
      <%= render partial: "skill", collection: @current_page.skills %>
    </div>
  </div>
</section>
<% end %>

<% if @current_page.samples.count > 0 %>
<section class="tab-pane" id="portfolio">
  <h2>Portfolio</h2>
  <div class="row-fluid">
    <div class="span2">
      <ul class="nav nav-pills nav-stacked sidebar-nav samples">
        <% @current_page.samples.each_with_index do |sample, i| %>
        <li class="<%= i == 0 ? 'active' : '' %>"><a href="#<%= sample.name %>"><%= sample.name %></a></li>
        <% end %>
      </ul>
    </div>
    <div class="span10">
      <%= render partial: "sample", collection: @current_page.samples %>
    </div>
  </div>
</section>
<% end %>

<% if @current_page.work_histories.count > 0 %>
<section class="tab-pane" id="work_history">
  <h2>Work History</h2>
  <%= render partial: "work_history", collection: @current_page.work_histories %>
</section>
<% end %>

